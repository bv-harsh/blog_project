<%= link_to "Home", :action=> 'index' %>

<h2> Sign In </h2>

<%= form_with model: @user do |form| %>
	<div>
		<%= form.label :username %>
		<%= form.text_field :username %>
	</div>

	<div>
		<%= form.label :password %>
		<%= form.password_field :password %>
	</div>

	<p>
	<% if flash[:alert] %>
		<%= flash[:alert] %>
		<% flash[:alert] = nil %>
	<% end %>
	</p>
	<div>
		<%= form.submit %>
	</div>
<% end %>

